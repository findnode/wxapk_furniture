.list{
  width: 92%;
  height: 260rpx;
  margin-top: 30rpx;
  margin-left: 4%;
}
.tel,.name,.mshow{
  display: inline-block;
  font-size: 38rpx;
}
.tel{
  margin-left: 20rpx;
}
.edit{
  width: 30rpx;
  height: 60rpx;
  float: right;
  margin-top: -150rpx;
  margin-right: 10rpx;
}
.edit>image{
  width: 100%;
  height: 100%;
}
.li-xx,.li-dz,.li-xg{
  margin: 30rpx 0;
}
.li-dz{
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx; 
}
.li-xg{
  margin: -12rpx 0 0 0;
  font-size:32rpx;
  margin-right:22rpx;
}
.del{
  float: right;
  color: #555;
}
.mshow{
  display: inline-block;
  font-size: 28rpx;
  margin-left: 10%;
  text-align: center;
  background: #1a5;
  padding:0 10rpx;
  border-radius: 100rpx;
  color: white;
}
.moren{
  /* color: #1a5; */
}
.line{
  display: inline-block;
  width: 108%;
  height: 20rpx;
  background: #eee;
  margin-left: -4%;
}
.bline{
  width: 100%;
  height: 80rpx;
}
.button{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 38rpx;
  text-align: center;
  background: #1E90FF;
  color: #fff;
  position: fixed;
  bottom: 0rpx;
}