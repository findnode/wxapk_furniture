/*弹出层*/
/*使屏幕变暗 */
.commodity_screen {
 width: 100%;
 height: 100%;
 position: fixed;
 top: 0;
 left: 0;
 background: #000;
 opacity: 0.2;
 overflow: hidden;
 z-index: 1000;
 color: #fff;
}
/*对话框 */
.commodity_attr_box {
 height: 530rpx;
 width: 100%;
 overflow: hidden;
 position: fixed;
 bottom: 0;
 left: 0;
 z-index: 2000;
 /* background: #fff; */
 padding-top: 40rpx;
}
/* 弹出层2*/
.popup{
    display: none;
}
.popup_model{
    position:fixed;
    top:0;
    left:0;
    width:100%;
    height:100%;
    /* background:rgba(0,0,0,0.5); */
}
specifications{
    flex:1;
    text-align: left;
    color: #ff8e0f;
    padding-left:30rpx;
    box-sizing: border-box;
}
.popup_specifications{
    z-index:999;
    background:white;
    position: fixed;
    width:100%;
    bottom:90rpx;
    font-size:0;
    padding:10rpx 30rpx 30rpx;
    box-sizing: border-box;
}
.popup_head{
    width:150rpx;
    height:150rpx;
    border-radius: 15rpx;
    background-size:cover !important;
    display: inline-block;
}
name{
    margin-left:25rpx;
}
shop_name{
    display: inline-block;
    width:100%;
}
.popup_prece{
    display: flex;
    font-size:28rpx;
    align-items: flex-end;
    position: relative;
    top: -50rpx;
}
shop_money{
    color: #ff6b68;
    margin-top:10rpx;
    display: inline-block;
}
.specification{
    font-size:30rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
shop_num{
    display: flex;
    align-items: center;
}
shop_num span{
    width:30rpx;
    height:30rpx;
    line-height:30rpx;
    text-align: center;
    border:1px solid #a5a5a5;
    color: #a5a5a5;
}
shop_num input{
    width:100rpx;
    text-align: center;
}
.shop_details{
    margin-bottom:15rpx;
}
shop_ul{
    width: 100%;
    display: inline-block;
    font-size:30rpx;
}
shop_ul li{
    display:inline-block;
    background:#EEEEEE;
    border-radius:5rpx;
    margin-bottom:15rpx;
    margin-right:15rpx;
    padding:10rpx 20rpx;
    box-sizing:border-box;
}
price{
    margin-left:50rpx;
}
selected{
    font-size:30rpx;
    display: inline-block;
    width:100%;
    margin-bottom: 20rpx;
}
.icon-gouwuche{
    position:fixed;
    top:30rpx;
    right:30rpx;
    color:white;
    background: #ff8e0f;
    border-radius:10rpx;
    font-size:40rpx;
    padding:15rpx;
}
.aaa{
    background: #657cff;
    border-radius:3rpx;
    color:white;
}